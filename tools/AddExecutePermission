#!/bin/bash
echo "正在为工具目录下的所有脚本添加执行权限..."

# 要添加权限的文件列表
files=(
    "tools/OfficialChannel"
    "tools/AutoSwitchSkin" 
    "tools/Pack.bms"
    "tools/PyToYamlConverter"
    "tools/Extract.bms"
    "tools/TxtToYamlConverter"
    "tools/AutoConfigWriter"
    "tools/GlobalCodeOutput"
    "tools/AutoSwitchSkinIcon"
    "tools/unpack"
    "tools/quickbms"
    "tools/TitleBeautify"
    "tools/AvatarFrameBeautify"
    "tools/LobbyActionBeautify"
    "tools/EliminationBroadcastBeautify"
    "tools/LegacyWeaponBeautify"
    "tools/SubwaySkinBeautify"
    "tools/SetupEnv"
    "tools/OriginalSkinConfigExtractor"
    "tools/OriginalSkinEntrance"
    "tools/OriginalSkinValueExtractor"
)

# 批量处理
for file in "${files[@]}"; do
    if [ -f "$file" ]; then
        chmod +x "$file"
        echo "已为 $file 添加执行权限"
    else
        echo "警告: $file 不存在，跳过"
    fi
done

echo "执行权限添加完成！"